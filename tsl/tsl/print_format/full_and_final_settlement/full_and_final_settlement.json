 "html": "\n\n<table width = 100% style=\"table-align:center;\">\n<tr>\n    {% set cyrix_employee = frappe.db.get_value(\"Employee\",doc.employee,['cyrix_employee_']) %}\n    \n    {% if cyrix_employee == 1 %}\n    <td width= 30% rowspan = 2 colspan = 3 ><img width = 200px height = 70px src= \"/files/cyrix.jpeg\"></td>\n    {% else %}\n    <td width= 30% rowspan = 2 colspan = 3 ><img width = 200px height = 70px src= \"/files/TSL Logo.png\"></td>\n    {% endif %}\n    <td colspan = 6 style=\"text-align:center;font-size:16px;line-height:11px\" ><br><b>FULL AND FINAL SETTLEMENT</b></td>\n</tr>\n<tr>\n    <td colspan = 6 style=\"text-align:center;font-size:16px;line-height:11px\" ><br><b>{{doc.company}}</b></td>\n</tr>\n</table>\n<table class = 'table table-bordered' style = 'border-collapse: collapse' width = 100%>\n    <tr>\n<td colspan = 4 style=\"font-size:12px;background-color:#0066AD;\"><center><b style = color:white>Full and Final Settlement</b></center></td>\n</tr>\n<tr>\n    <td style=\"width:17%;font-size:9px;\"><b>Name of Employee (Mr/Ms)</b></td>\n    <td  colspan = 3 style=\"width:17%;font-size:9px;\">{{doc.employee_name }} </td>\n  \n    \n</tr>\n\n\n<tr>\n    <td style='text-align:left; width:18.6%;font-size:9px;'><b>Department</b></td>\n    <td  colspan = 3 style=\"width:9%;font-size:9px;\">{{doc.department }} </td>\n   \n    \n    </tr>\n    <tr>\n    <td style='text-align:left; width:18.6%;font-size:9px;'><b>Date of Joining</b></td>\n    <td colspan = 3 style=\"width:9%;font-size:9px;\">{{ frappe.utils.formatdate(doc.date_of_joining)  or '-'}} </td>\n\n    </tr>\n    \n    <tr>\n    \n    <td style=\"font-size:9px;\"><b>Employee Number</b></td>\n    <td colspan = 3 style=\"font-size:9px;\">{{doc.employee }} </td>\n\n    \n    </tr>\n    <tr>\n    <td style='text-align:left; width:18.6%;font-size:9px;'><b>Designation</b></td>\n    <td colspan = 3 style=\"width:9%;font-size:9px;\"> {{doc.designation}}</td>\n    </tr>\n    <tr>\n        <td style=\"font-size:9px;\"><b>Last Working Day</b></td>\n    <td  colspan = 3 style=\"font-size:9px;\"> {{ frappe.utils.formatdate(doc.pay_end_date)  or '-'}} </td>\n    </tr>\n    \n\n\n    <tr>\n        <td colspan = 4 style=\"font-size:12px;background-color:#0066AD;\"><center><b style = color:white>Salary Details</b></center></td>\n    </tr>\n    \n    <tr>\n    <td colspan = 1 style='width:25%;text-align:left;font-size:9px;'><b>Basic Salary</b></td>\n    <td colspan = 1 style=\"width:25%;font-size:9px;\">{{\"%.2f\" | format(doc.basic_salary | float) or \"0\"}} </td>\n    <td colspan = 1 style=\"width:25%;font-size:9px;\"><b>Mobile Allowance</b></td>\n    <td colspan = 1 style=\"width:25%;font-size:9px;\">{{\"%.2f\" | format(doc.mobile_allowance | float) or \"0\"}} </td>\n    </tr>\n    <tr>\n     <td colspan = 1 style=\"font-size:9px;\"><b>Food Allowance</b></td>\n    <td colspan = 1 style=\"font-size:9px;\">{{\"%.2f\" | format(doc.food_allowance | float) or \"0\"}}</td>\n    <td colspan = 1 style=\"font-size:9px;\"><b>HRA</b></td>\n    <td colspan = 1 style=\"font-size:9px;\">{{\"%.2f\" | format(doc.hra | float) or \"0\"}} </td>\n    </tr>\n    <tr>\n    <td colspan = 1 style=\"font-size:9px;\"><b>Transportation</b></td>\n    <td colspan = 1 style=\"font-size:9px;\">{{\"%.2f\" | format(doc.transportation_pay | float) or \"0\"}} </td>  \n    <td colspan = 1 style=\"font-size:9px;\"><b>Car Allowance</b></td>\n    <td colspan = 1 style=\"font-size:9px;\">{{\"%.2f\" | format(doc.car_allowance | float) or \"0\"}} </td>  \n    </tr>\n    <tr>\n    <td colspan = 1 style=\"font-size:9px;\"><b>Other Allowances</b></td>\n    <td colspan = 1 style=\"font-size:9px;\">{{\"%.2f\" | format(doc.other_allowances | float) or \"0\"}} </td>  \n    <td colspan = 1 style=\"font-size:9px;\"><b>GOSI Deduction</b></td>\n    <td colspan = 1 style=\"font-size:9px;\">{{\"%.2f\" | format(doc.gosi_deduction | float) or \"0\"}} </td>  \n    </tr>\n    \n    <tr>\n        <td colspan = 4 style=\"font-size:12px;background-color:#0066AD;\"><center><b style = color:white>Payroll Details</b></center></td>\n    </tr>\n    \n        <tr>\n        <td colspan = 1 style=\"width:18.6%;font-size:9px;\">Pay Start Date</td>\n        <td colspan = 1 style=\"width:9%;font-size:9px;\">{{ frappe.utils.formatdate(doc.pay_start_date)  or '-'}} </td>\n        <td colspan = 1 style=\"width:18.6%;font-size:9px;\">Basic Salary</td>\n        <td colspan = 1 style=\"width:18.6%;font-size:9px;\">{{\"%.2f\" | format(doc.earned_basic | round) or \"0\"}} </td>\n        </tr>\n        \n        <tr>\n        <td style=\"width:18.6%;font-size:9px;\">Pay End Date</td>\n        <td style=\"width:9%;font-size:9px;\">{{ frappe.utils.formatdate(doc.pay_end_date)  or '-'}} </td>\n        <td style=\"width:9%;font-size:9px;\">Food Allowance</td>\n        <td style=\"width:18.6%;font-size:9px;\">{{\"%.2f\" | format(doc.earned_food_allowance | float) or \"0\"}} </td>\n        </tr>\n        \n        <tr>\n        <td style=\"width:18.6%;font-size:9px;\">No. of Days Worked</td>\n        <td style=\"width:9%;font-size:9px;\">{{\"%.2f\" | format(doc.no_of_days_worked  | float) or \"0\" }} </td>\n        <td style=\"font-size:9px;\">Earned Transportation</td>\n        <td style=\"font-size:9px;\">{{\"%.2f\" | format(doc.transportation | float) or \"0\"}} </td>\n        </tr>\n        \n        <tr>\n        <td style=\"width:18.6%;font-size:9px;\">Absent Days</td>\n        <td style=\"width:9%;font-size:9px;\">{{\"%.2f\" | format(doc.absent_days  | float) or \"0\" }} </td>\n        <td style=\"font-size:9px;\">Earned Mobile Allowance</td>\n        <td style=\"font-size:9px;\">{{\"%.2f\" | format(doc.earned_mobile_allowance | float) or \"0\"}} </td>\n        </tr>\n        \n        <tr>\n        <td style=\"width:18.6%;font-size:9px;\">Earned Car Allowance</td>\n        <td style=\"width:9%;font-size:9px;\">{{\"%.2f\" | format(doc.earned_car_allowance  | float) or \"0\" }} </td>\n        <td style=\"font-size:9px;\">Earned HRA</td>\n        <td style=\"font-size:9px;\">{{\"%.2f\" | format(doc.earned_hra | float) or \"0\"}} </td>\n        </tr>\n        \n        <tr>\n        <td style=\"width:18.6%;font-size:9px;\">Earned Other Allowance</td>\n        <td style=\"width:9%;font-size:9px;\">{{\"%.2f\" | format(doc.earned_other_allowance  | float) or \"0\" }} </td>\n        <td style=\"width:18.6%;font-size:9px;\">OT Amount</td>\n        <td style=\"width:9%;font-size:9px;\">{{\"%.2f\" | format(doc.amount  | float) or \"0\" }} </td>\n        </tr>\n        \n        <tr>\n        <td style=\"width:18.6%;font-size:9px;\">GOSI</td>\n        <td style=\"width:9%;font-size:9px;\">{{\"%.2f\" | format(doc.gosi  | float) or \"0\" }}</td>\n        <td style=\"width:9%;font-size:9px;\"><b>Payroll Total</b></td>\n        <td style=\"width:9%;font-size:9px;\"><b>{{\"%.2f\" |format(doc.total_salary |round) or \"0\"}} </b></td>\n       </tr>\n        \n        <tr>\n            <td colspan = 4 style=\"font-size:12px;background-color:#0066AD;\"><center><b style = color:white>Vacation / Final Settlement Details</b></center></td>\n        </tr>\n           \n        \n        <tr>\n            <td style=\"width:18.6%;font-size:9px;\">Leaves Encashed</td>\n            <td style=\"width:9%;font-size:9px;\">{{doc.encashed_leaves or \"0\"}} days</td>\n            \n            <td style=\"width:18.6%;font-size:9px;\">Leave Pay</td>\n            <td style=\"width:18.6%;font-size:9px;\">{{\"%.2f\" | format(doc.leave_pay | round)  or \"0\"}} </td>\n        </tr>\n        \n         <tr>\n            <td style=\"width:18.6%;font-size:9px;\">Employment Duration</td>\n            <td style=\"width:9%;font-size:9px;\">{{doc.employment_duration or \"0\"}} days </td>\n          \n            <td style=\"width:18.6%;font-size:9px;\">Gratuity Amount</td>\n            <td style=\"width:18.6%;font-size:9px;\">{{\"%.2f\" | format(doc.gratuity_amount | round) or \"0\"}} </td>\n        </tr>\n        \n         <tr>\n            <td style=\"width:18.6%;font-size:9px;\">Total Worked</td>\n            <td style=\"width:9%;font-size:9px;\">{{doc.total_worked or \"0\"}} days</td>\n            <td style=\"width:18.6%;font-size:9px;\">Additions</td>\n            <td style=\"width:18.6%;font-size:9px;\">{{\"%.2f\" |format(doc.additions|float) or \"0\"}} </td>\n        </tr>\n        \n         <tr>\n            <td style=\"width:18.6%;font-size:9px;\">Loan/Other Deduction</td>\n            <td style=\"width:18.6%;font-size:9px;\">{{\"%.2f\" | format(doc.loan_other_deduction|float) or \"0\"}} </td>\n            <td style=\"width:18.6%;font-size:9px;\"><b>Leave Pay/Gratuity Total</b></td>\n            <td style=\"width:18.6%;font-size:9px;\"><b>{{\"%.2f\" | format(doc.leave_gratuity_total|round)}}</b></td>\n        </tr>\n        \n        <tr>\n            <td style=\"width:18.6%;font-size:9px;\"></td>\n            <td style=\"width:18.6%;font-size:9px;\"></td>\n            <td style=\"width:9%;font-size:9px;\"><b>NET PAY</b></td>\n            <td style=\"width:9%;font-size:9px;\"><b>{{\"%.2f\" |format(doc.net_pay|round) }}</b></td>\n        </tr>\n        \n         <tr>\n            <td   colspan = '5' style=\"font-size:9px;\">Remarks: {{ doc.remark or '-' }}</td>\n        </tr>\n    </table>\n<p style = font-size:9px;>Amount in Words : <b>{{frappe.utils.money_in_words(doc.net_pay|round or '')}}</b></p><br><br>\n\n<table width = 100% style = font-size:10px;>\n    <tr>\n        <td>Prepared By</td>\n        <td>HR Manager</td>\n        <td>Finance Manager</td>\n        <td>CEO</td>\n    </tr>\n</table>",
